<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Contorno negro tipo pixel-art -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000" /> <!-- borde negro -->
        </shape>
    </item>

    <!-- Cuerpo principal de la carpeta (interior) -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2b2b2b" /> <!-- gris oscuro retro -->
        </shape>
    </item>

    <!-- Pestaña superior de la carpeta (color brillante tipo pixel retro) -->
    <item android:left="2dp" android:top="2dp" android:right="70dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#fcd000" /> <!-- amarillo tipo NES -->
        </shape>
    </item>

    <!-- Detalle extra como capa superior (puede simular brillo o recorte) -->
    <item android:left="2dp" android:top="20dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#f4b400" /> <!-- tono ligeramente más oscuro para contraste -->
        </shape>
    </item>

</layer-list>
