<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra para profundidad -->
    <item android:left="4dp" android:top="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FDFCFC" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Contorno negro tipo pixel-art -->
    <!-- (Puedes agregar aquí si quieres) -->

    <!-- Cuerpo principal de la carpeta con degradado -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#3a3a3a"
                android:centerColor="#2b2b2b"
                android:endColor="#1e1e1e"
                android:angle="270" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <!-- Pestaña superior de la carpeta (color brillante tipo pixel retro) -->
    <item android:left="2dp" android:top="2dp" android:right="70dp" android:bottom="80dp">
        <shape android:shape="rectangle">
            <solid android:color="#fcd000" />
        </shape>
    </item>

    <!-- Detalle extra como capa superior (puede simular brillo o recorte) -->
    <item android:left="2dp" android:top="20dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#f4b400" />
        </shape>
    </item>

</layer-list>
