<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d2025"
    android:padding="24dp"
    tools:context=".ui.fragments.profileFragment">

    <!-- Texto de encabezado mejorado -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mi Perfil"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:fontFamily="sans-serif-light"
        android:textStyle="normal"
        android:letterSpacing="0.02"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Gestiona tu informaciÃ³n personal"
        android:textColor="#b3ffffff"
        android:textSize="16sp"
        android:fontFamily="sans-serif"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/profile_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_profile"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_user_placeholder"
            android:scaleType="centerCrop"
            app:civ_border_width="3dp"
            app:civ_border_color="#4CAF50" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="20dp">

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario123"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuenta activa"
                android:textColor="#4CAF50"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#33ffffff"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@id/profile_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/options_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_plataformas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plataformas"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_gray"
            app:backgroundTint="@null"
            android:layout_marginBottom="12dp"
            android:paddingVertical="18dp"
            android:drawableStart="@drawable/ic_platform"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp" />

        <Button
            android:id="@+id/btn_favoritos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favoritos"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_gray"
            app:backgroundTint="@null"
            android:layout_marginBottom="12dp"
            android:paddingVertical="18dp"
            android:drawableStart="@drawable/ic_favorite"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp" />

        <Button
            android:id="@+id/btn_historial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Historial"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="false"
            android:background="@drawable/btn_rounded_gray"
            app:backgroundTint="@null"
            android:paddingVertical="18dp"
            android:drawableStart="@drawable/ic_history"
            android:drawablePadding="12dp"
            android:gravity="start|center_vertical"
            android:paddingStart="20dp" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_desconectar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="false"
        android:background="@drawable/btn_rounded_red"
        android:drawableStart="@drawable/ic_logout"
        android:drawablePadding="12dp"
        android:paddingVertical="18dp"
        app:backgroundTint="@null"
        android:gravity="center"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>